{
    "compilerOptions": {
        "module": "commonjs",
        "jsx": "react-jsx",
        "baseUrl": "./source",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "paths": {
            "@view/*": ["./core/view/*"],
            "@hook/*": ["./core/hook/*"],
            "@util/*": ["./core/util/*"],
            "@model/*": ["./core/model/*"],
            "@wrapper/*": ["./core/wrapper/*"],
            "@component/*": ["./core/component/*"],
            "@type/*": ["../@types/*"],
            "@app/*": ["./core/*"]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ]
    },
    "exclude": [
        "./node_modules"
    ],
    "typedocOptions": {
        "includeVersion": true,
        "out": "documentation",
        "entryPointStrategy": "expand",
        "theme": ["hierarchy"],
        "plugin": [
            "./node_modules/typedoc-theme-hierarchy/dist/index.js"
        ],
        "entryPoints": [
            "./webpack.development.ts",
            "./webpack.production.ts",
            "./webpack.common.ts",
            "./@types",
            "./source"
        ]
    }
}
